---
import Favicons from '@components/general/Favicons.astro'
import Header from '@components/general/Header.astro'
import SearchPanel from '@components/general/SearchPanel.astro'

import Hero from '../components/mainPage/Hero.astro'
import ButtonArrow from '@components/general/ButtonArrow.astro'
import FooterWidget from '@components/general/FooterWidget.astro'
import Footer from '@components/general/Footer.astro'

export interface Props {
	title?: string;   
}

const { title } = Astro.props;
---


<!DOCTYPE html>
<html lang="ru">
<head>
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1">   
   
   <meta name='description' content='Платформа Адвокаты Сургута'>   
   <link rel="canonical" href="#">

   <!-- Favicons -->
    <Favicons />
    
    <!-- Fonts -->
   <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
   
   <!-- Ionicons -->
  <link href="https://unpkg.com/ionicons@4.2.2/dist/css/ionicons.min.css" rel="stylesheet">  

   <!-- Styles CSS -->
   <link rel="stylesheet" href="/styles/globals.css" />
   
   
   <title>{title}</title>
</head>

<body>
    <Header />
    <SearchPanel />
    <main class="content" aria-label="Content"> 
    <Hero /> 
      <slot />
    </main>
    <ButtonArrow />  
    <FooterWidget />
    <Footer />

<!-- JS Scripts -->
  <script is:inline src="/scripts/jquery-3.5.1.min.js"></script>
  <script is:inline src="/scripts/simple-jekyll-search.min.js"></script>
  <script is:inline src="/scripts/jquery.fitvids.js"></script>
  <script is:inline src="/scripts/lazyload.min.js"></script>
  <script is:inline src="/scripts/transition.js"></script> 
  <script is:inline src="/scripts/common.js"></script>
</body>
</html>




